[flake8]
max-line-length = 100
extend-ignore = 
    # E226: Missing whitespace around arithmetic operator
    E226,
    # E402: Module level import not at top of file
    E402,
    # E501: Line too long
    E501

# Exclude some directories from checking
exclude =
    build,
    dist,
    .git,
    __pycache__,
    .eggs,
    *.egg,
    # Add migration files or generated files here
    parameter_generator_py